#!/usr/bin/env python3

# Prompt the user to input their gender
gender = input("Are you male or female? ").lower()

# Check if the input is valid
if gender not in ['male', 'female']:
    print("Invalid input. Please enter 'male' or 'female'. Exiting...")
    exit()

# Ask the user for input
age_years = int(input("Enter your age in years: "))

# Calculate age in days
age_days = age_years * 365

# Calculate age in months
age_months = age_years * 12

# Calculate age in hours
age_hours = age_days * 24

# Print the results
print("Your age in days:", age_days)
print("Your age in months:", age_months)
print("Your age in hours:", age_hours)
